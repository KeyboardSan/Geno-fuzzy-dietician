extends ./includes/layout
block main	
	.row
		.col.s12.m6
				.card.card-margin
					.card-content
						span.card-title.text-darken-2 Welcome to Geno-Fuzzy-Dietician
						p
							| We will give the best diet to make you Fit!
							| Sign up if you are a new user, Login if you know where you are!
					|             
					.card-action
							// Modal Trigger
							a.waves-effect.waves-light(href="#modalSignup" data-target="#modalSignup") Sign Up
							a.waves-effect.waves-light(href="#modalLogin" data-target="#modalLogin") Login

							// Modal Structure
							#modalSignup.modal.bottom-sheet(style="max-height:100%")
								.modal-content
									.row
										.col.s4.offset-s4
											h5(style="text-align:center") Sign Up
										.col.s4
											a.modal-action.modal-close.btn-floating.waves-effect.waves-light.btn-flat(href="#" style="left:80%")
												i.material-icons.black-text close
									.row
										.col.s12		
											.card.card-margin
												.card-content
													form(action="/signup" method="post")
														.row
															.col.s12.input-field.inline				
																input#Fname(type='text')
																label(for='Fname') First Name
														.row
															.col.s12.input-field.inline				
																input#Lname(type='text')
																label(for='Lname') Last Name
														.row
															.col.s12.input-field.inline				
																input#email.validate(type='email')
																label(for='email', data-error='wrong',data-success='right') Email
																
														.row
															.input-field.col.s12
																input#password.validate(type='password')
																label(for='password') Password
														.row
															.col.s12.input-field.inline				
																input#height(type='number')
																label(for='height') Height
														.row
															.col.s12.input-field.inline				
																input#weight(type='number')
																label(for='weight') Weight
														.row
															.col.s12.input-field.inline				
																input#age(type='number')
																label(for='age') Age
														.row
															.col.s12.input-field.inline				
																.input-field.col.s12
																	select(multiple='')
																		option(value='', disabled='', selected='') Ethnicity
																		option(value='north') North
																		option(value='south') South
																		option(value='east') East
																		option(value='west') West
														.row
															.col.s12
																input#male.with-gap(name='gender', type='radio', value='male')
																label(for='male') Male

																input#female.with-gap(name='gender', type='radio', value='female')
																label(for='female') Female
														.row
															.col.s12
																input#veg.with-gap(name='type', type='radio', value='V')
																label(for='V') Veg
																input#nonveg.with-gap(name='type', type='radio', value='NV')
																label(for='NV') Non veg
														.row
															.col.s12
																select#diseases(multiple='', name='diseases')
																	option(value='', disabled='', selected='') Diseases
																	option(value='diabetes') Diabetes
																	option(value='hypertension') Hypertension
																	option(value='NA') No Diseases
														.row
															.col.s12
																select#allergies(multiple='', name='allergies')
																	option(value='', disabled='', selected='') Allergies
																	option(value='lactose') lactose
																	option(value='NA') No Allergies
																
														.row
															.col.s12
																select#activity(name='activity', value='activity')
																	option(value='default', disabled='', selected='') Activity
																	option(value='NA') Little to No Activity
																	option(value='LA') Low Activity
																	option(value='MA') Medium Activity
																	option(value='HA') High Activity
																	option(value='VHA') Very High Activity
														.row
															.col.s12
																select#goal(name='goal')
																	option(value='', disabled='', selected='') Goal
																	option(value='LF') Loose Fat
																	option(value='LM') Gain Lean Muscle
																	option(value='MM') Maintenance


														button.btn-flat.modal-action.waves-effect.waves-green.blue-text(type="submit") Sign Up

							
							#modalLogin.modal.bottom-sheet.mod(style="max-height:100%")
								.modal-content
									.row
										.col.s4.offset-s4
											h5(style="text-align:center") Login
										.col.s4
											a.modal-action.modal-close.btn-floating.waves-effect.waves-light.btn-flat(href="#" style="left:80%")
												i.material-icons.black-text close

									.row
										.col.s12.m6
											.card.card-margin
												.card-content
													form(action="/login" method="post")
														.row
															.col.s12.input-field.inline				
																input#email.validate(type='email')
																label(for='email', data-error='wrong',data-success='right')  Email
														.row
															.input-field.col.s12
																input#password.validate(type='password')
																label(for='password') Password

														button.btn-flat.modal-action.waves-effect.waves-green.blue-text(type="submit") Login
														

							
						
