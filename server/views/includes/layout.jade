doctype html
html
	head
		// Import Google Icon Font
		link(href='http://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
		// Import materialize.css
		link(type='text/css', rel='stylesheet', href='/vendor/materialize/dist/css/materialize.min.css', media='screen,projection')
		link(type="text/css" rel='stylesheet', href='/css/main.css')
		// Let browser know website is optimized for mobile
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
	body
		include ../partials/header
		block main
		include ../partials/footer
	// Import jQuery before materialize.js
	script(type='text/javascript', src='/vendor/jquery/dist/jquery.min.js')
	script(type='text/javascript', src='/vendor/materialize/dist/js/materialize.min.js')
	script.
		$(".modal").modal(); 
		$(document).ready(function(){
		// the "href" attribute of .modal-trigger must specify the modal ID that wants to be triggered
		$('.modal').modal();
		$(".button-collapse").sideNav();
		  $('select').material_select();
		});
		 
